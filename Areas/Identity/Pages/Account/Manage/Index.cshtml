@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
        <div class="col-md-6">
          <div class="form-floating">Current profile photo <br>
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.Picture)" width="128" height="128"alt="Profile Picture" class="img-thumbnail" />
        </div>
        <div class="col-md-6">
            <div class="form-floating">Currnet Biography<br>
                <p>@Model.Bio</p>
            </div>
        </div>
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="Input.PhoneNumber" class="form-control"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="FileUploadDb.formFile" placeholder="Profile Picture">Profile Picture</label>
                <input asp-for="FileUploadDb.formFile" type="file" class="form-control"/>
                <span asp-validation-for="FileUploadDb.formFile" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="NewBio" class="form-label">Biography</label><br>
                <textarea asp-for="NewBio" class="form-control"></textarea>
            </div>
            <br>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
